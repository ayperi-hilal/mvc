@model site2.Models.Sınıflar.yorumlar

@{
    ViewBag.Title = "yorumGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Getir</h2>

@using (Html.BeginForm("yorumGuncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />

    @Html.LabelFor(x => x.KullanciAdi)
    @Html.TextBoxFor(x => x.KullanciAdi, new { @class = "form-control" })

    <br />
    @Html.LabelFor(x => x.Mail)
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })

    <br />
    @Html.LabelFor(x => x.Blog.baslik)
    @Html.TextBoxFor(x => x.Blog.baslik, new { @class = "form-control" })

    <br />

    @Html.LabelFor(x => x.Yorum)
    @Html.TextAreaFor(x => x.Yorum, 15, 1, new { @class = "form-control" })



    <br />
    <button class="btn btn-success">Yorum Güncelle</button>
}
