@using site2.Models.Sınıflar
@model List<blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>TARİH</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.baslik</td>
            <td>@x.Tarih.ToShortDateString()</td>
            <td><a href="/Admin/blogSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/blogGetir/@x.ID"class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Blog/BlokDetay/@x.ID"class="btn btn-info">Detay</a></td>
           
        </tr>
    }



</table>
<a href="/Admin/YeniBlog/" class="btn btn-primary">Yeni Blog</a>
