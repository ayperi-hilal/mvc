@using site2.Models.Sınıflar
@model List<blog>



<div class="padding1">
    <h4>En Çok Beğendiğimiz Yerler</h4>
    <div class="box-left">
        @foreach (var x in Model)
        {
            <div class="bot-img">
                <img src="@x.BlogImage" alt="" />
            </div>
            <div class="bot-desc">
               
                <p>
                    @if (@x.Aciklama.Length > 50)
                    {@x.Aciklama.Substring(0, 50)}
                else
                {@x.Aciklama}

                </p>
            </div>
            <div class="clear"></div>
        }
    </div>
</div>
