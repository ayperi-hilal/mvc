<div class="box1-left">
    @foreach (var x in Model)
    {
        <div class="bot-img">
            <img src="@x.BlogImage" alt="" />
        </div>
        <div class="bot-desc1">
            <p>
                @if (@x.Aciklama.Length > 50)
                {@x.Aciklama.Substring(0, 50)}
            else
            {@x.Aciklama}
            </p>
        </div>
        <div class="clear"></div>
    }
   
</div>
