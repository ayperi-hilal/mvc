@using site2.Models.Sınıflar
@model List<yorumlar>

@{
    ViewBag.Title = "yorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>


<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Onayla</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.KullanciAdi</td>
            <td>@x.Mail</td>
            <td>@x.Yorum</td>
            <td><a href="/Blog/BlokDetay/@x.ID">@x.Blog.baslik</a></td>
            <td ><a href="#" class="btn btn-success" >Onayla</a></td>
            <td><a href="/Admin/yorumGetir/@x.ID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Admin/yorumSil/@x.ID" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>

